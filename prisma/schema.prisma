generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VISIBLITY {
  PUBLIC
  PRIVATE
}

model Paste {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  slug      String    @unique
  visiblity VISIBLITY @default(PUBLIC)

  ownerId String?

  name    String?
  content String
  views   Int     @default(0)

  deleted Boolean @default(false)

  @@unique([ownerId, slug])
  @@index([slug])
}
